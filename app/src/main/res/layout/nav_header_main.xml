<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/nav_cover3"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="100"
    app:layout_collapseParallaxMultiplier="1.0">

    <ImageView
        android:id="@+id/imageView"
        android:background="@drawable/logo192"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="20dp"
        android:layout_weight="42.52"

        />
    <!--android:background="@drawable/logo100x100"-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="22.65"
android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Smart Shop UAE"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="Is to know before go Shopping"
        android:layout_weight="12.35"/>

</LinearLayout>
